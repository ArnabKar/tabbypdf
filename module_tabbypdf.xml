<?xml version="1.0" encoding="UTF-8"?>
<project name="module_tabbypdf" default="compile.module.tabbypdf">
  <dirname property="module.tabbypdf.basedir" file="${ant.file.module_tabbypdf}"/>
  
  <property name="module.jdk.home.tabbypdf" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tabbypdf" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tabbypdf" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tabbypdf" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="tabbypdf.output.dir" value="${module.tabbypdf.basedir}/../../Development/codes/tabbypdf/target/classes"/>
  <property name="tabbypdf.testoutput.dir" value="${module.tabbypdf.basedir}/../../Development/codes/tabbypdf/target/test-classes"/>
  
  <path id="tabbypdf.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tabbypdf.module.production.classpath">
    <path refid="${module.jdk.classpath.tabbypdf}"/>
  </path>
  
  <path id="tabbypdf.runtime.production.module.classpath">
    <pathelement location="${tabbypdf.output.dir}"/>
  </path>
  
  <path id="tabbypdf.module.classpath">
    <path refid="${module.jdk.classpath.tabbypdf}"/>
    <pathelement location="${tabbypdf.output.dir}"/>
  </path>
  
  <path id="tabbypdf.runtime.module.classpath">
    <pathelement location="${tabbypdf.testoutput.dir}"/>
    <pathelement location="${tabbypdf.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.tabbypdf">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tabbypdf">
    <patternset refid="excluded.from.module.tabbypdf"/>
  </patternset>
  
  <path id="tabbypdf.module.sourcepath">
    <dirset dir="${module.tabbypdf.basedir}/../../Development/codes/tabbypdf">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="tabbypdf.module.test.sourcepath">
    <dirset dir="${module.tabbypdf.basedir}/../../Development/codes/tabbypdf">
      <include name="src/test/java"/>
      <include name="src/test/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tabbypdf" depends="compile.module.tabbypdf.production,compile.module.tabbypdf.tests" description="Compile module tabbypdf"/>
  
  <target name="compile.module.tabbypdf.production" depends="register.custom.compilers" description="Compile module tabbypdf; production classes">
    <mkdir dir="${tabbypdf.output.dir}"/>
    <javac2 destdir="${tabbypdf.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tabbypdf}/javac">
      <compilerarg line="${compiler.args.tabbypdf}"/>
      <bootclasspath refid="tabbypdf.module.bootclasspath"/>
      <classpath refid="tabbypdf.module.production.classpath"/>
      <src refid="tabbypdf.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tabbypdf"/>
    </javac2>
    
    <copy todir="${tabbypdf.output.dir}">
      <fileset dir="${module.tabbypdf.basedir}/../../Development/codes/tabbypdf/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tabbypdf.tests" depends="register.custom.compilers,compile.module.tabbypdf.production" description="compile module tabbypdf; test classes" unless="skip.tests">
    <mkdir dir="${tabbypdf.testoutput.dir}"/>
    <javac2 destdir="${tabbypdf.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tabbypdf}/javac">
      <compilerarg line="${compiler.args.tabbypdf}"/>
      <bootclasspath refid="tabbypdf.module.bootclasspath"/>
      <classpath refid="tabbypdf.module.classpath"/>
      <src refid="tabbypdf.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.tabbypdf"/>
    </javac2>
    
    <copy todir="${tabbypdf.testoutput.dir}">
      <fileset dir="${module.tabbypdf.basedir}/../../Development/codes/tabbypdf/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.tabbypdf.basedir}/../../Development/codes/tabbypdf/src/test/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.tabbypdf" description="cleanup module">
    <delete dir="${tabbypdf.output.dir}"/>
    <delete dir="${tabbypdf.testoutput.dir}"/>
  </target>
</project>